#!/bin/bash

parent=$(git parent-branch)
nr_csets=$(git log --oneline $parent..HEAD | wc -l)

topic=$1

if [[ $nr_csets != 1 ]]; then
	echo "WARNING: more than one cset since $parent found"
fi

gerrit-change-id

args=""
if [[ -n "$topic" ]]; then
    args="-o topic=$topic"
fi

parentbranch=$(basename $parent)
git push -n $args origin HEAD:refs/drafts/$parentbranch

echo "  --------------"
echo "  git push origin $args HEAD:refs/drafts/$parentbranch"
echo "  --------------"

